// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoUsuario {
  ALUNO
  MONITOR
  PROFESSOR
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  tipo      TipoUsuario @default(ALUNO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Pergunta Pergunta[]
  Resposta Resposta[]
  likes    Like[] // Relação para saber quais likes o usuário deu

  @@map("usuarios")
}

model Disciplina {
  id        Int      @id @default(autoincrement())
  nome      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  perguntas Pergunta[]

  @@map("disciplinas")
}

model Pergunta {
  id           Int        @id @default(autoincrement())
  titulo       String
  descricao    String
  imagemUrl    String? 
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  usuarioId    Int
  usuario      Usuario    @relation(fields: [usuarioId], references: [id])
  respostas    Resposta[]
  disciplinaId Int
  disciplina   Disciplina @relation(fields: [disciplinaId], references: [id])

  @@map("perguntas")
}

model Resposta {
  id         Int      @id @default(autoincrement())
  descricao  String
  imagemUrl  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  perguntaId Int
  pergunta   Pergunta @relation(fields: [perguntaId], references: [id], onDelete: Cascade)
  usuarioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  likes      Like[]

  @@map("respostas")
}

// NOVO MODELO PARA LIKES
model Like {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())

  // Relação com o usuário que deu o like
  usuarioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  // Relação com a resposta que recebeu o like
  respostaId Int
  resposta   Resposta @relation(fields: [respostaId], references: [id], onDelete: Cascade)

  // Garante que um usuário só pode dar like uma vez em uma mesma resposta
  @@unique([usuarioId, respostaId])
  @@map("likes")
}

model Admin {
  id        Int      @id @default(autoincrement())
  nome      String   @unique
  senha     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}